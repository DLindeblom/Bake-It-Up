  <!-- Title and Favicon -->
  <title>Cake It Up</title>
  <link rel="icon" type="image/x-icon" href="images/favicon.png">


  <!-- insert header from _header -->
  <%- include('partials/_header') %>

<body>

    <body>
<!-- SHOW ALL CAKES SECTION START HERE  -->
    <section class="cakes-container">

      <div class="heading">
          <h1>Check Out All Cakes</Out></h1>


          <div class="collection-sort">

            <p class="filter-by-prices">Filter By Prices</p>
            <!-- Filter form -->
            <form action="/cakes" method="GET">
            <select name="filter" class="filter-by-prices" >
              <option value="0">Display All</option>
              <option value="1">Below $50</option>
              <option value="2">$50 - $100</option>
              <option value="3">$100 - $150</option>
              <option value="4">Above $150</option>
            </select>
            <button type="submit">Filter Now</button>
          </form>

          </div>

      </div>
      <br>
    <% for (let cake in cakes) { %>

      <!-- Each Cake Display -->
      <div class="display-wrap">
        <div class="cake-display">
          <div class="fav-icon">
            <i class="fa-solid fa-heart"></i>
          </div>
          <div class="cake-photo">
            <img class="cake-photo" src="<%= cakes[cake].cake_photo_url %>" alt="">
          </div>
          <div class="cake-info">
            <p>
            <h3>
              <%= cakes[cake].title %>
            </h3>
            </p>
            <p>
            <h5>
              <%= cakes[cake].description %>
            </h5>
            </p>
            <p class="price">
             $<%= cakes[cake].price %>
            </p>
          </div>
          <!-- CAKE STATUS AND CONTACT SELLER SECTION -->
            <!-- cake_status -->
          <div class="status-contact">
            <button action="/fav" method="POST" class="cake-status"> <%= cakes[cake].cake_status %> </button>

            <!-- contact seller button -->
            <a href="mailto: <%= cakes[cake].email %>">
            <button class="contact-seller-btn"> Contact Seller</button>
            </a>
          </div>
        </div>
      </div>

      <% } %>


  </section>
  <!-- product section end here  -->
</body>
<!-- insert header from _footer -->
<%- include('partials/_footer') %>

